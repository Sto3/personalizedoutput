# Personalized Output - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================
# API KEYS (Required for core functionality)
# =============================================================

# Anthropic Claude API - Content generation
ANTHROPIC_API_KEY=sk-ant-...

# ElevenLabs - Santa voice messages + Redi V8 TTS
ELEVENLABS_API_KEY=sk_...
ELEVENLABS_SANTA_VOICE_ID=...

# OpenAI - Backup/alternative generation + Redi V7 Realtime API
OPENAI_API_KEY=sk-...

# Ideogram - Vision board image generation
IDEOGRAM_API_KEY=...

# Deepgram - Redi V8 streaming speech-to-text
DEEPGRAM_API_KEY=...

# Groq - Redi V8 ultra-fast LLM and vision
GROQ_API_KEY=gsk_...

# =============================================================
# SUPABASE (Required for auth, database, users)
# Create a new project at supabase.com/dashboard
# =============================================================

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOi...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOi...

# =============================================================
# STRIPE (Required for subscriptions)
# Get keys from dashboard.stripe.com/apikeys
# =============================================================

STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create these in Stripe dashboard)
STRIPE_PRICE_STARTER=price_...   # $25/month - 2 outputs
STRIPE_PRICE_REGULAR=price_...   # $39/month - 4 outputs
STRIPE_PRICE_POWER=price_...     # $59/month - 8 outputs

# =============================================================
# RESEND (Required for email alerts/notifications)
# Sign up at resend.com
# =============================================================

RESEND_API_KEY=re_...
ALERT_EMAIL=your-personal-email@example.com
FROM_EMAIL=alerts@personalizedoutput.com

# =============================================================
# SITE CONFIGURATION
# =============================================================

SITE_URL=https://personalizedoutput.com
NODE_ENV=production

# Admin access
ADMIN_KEY=your-secure-admin-key

# =============================================================
# OPTIONAL - ANALYTICS & MONITORING
# =============================================================

# Google Analytics
GA_TRACKING_ID=G-...

# Sentry error tracking
SENTRY_DSN=https://...
